<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/point_10"
    android:layout_marginTop="@dimen/point_8"
    android:background="@drawable/border10">

    <RelativeLayout
        android:id="@+id/relative_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/nav_header_vertical_spacing">

        <ImageView
            android:id="@+id/imageViewAvatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/nav_header_vertical_spacing"
            android:layout_marginLeft="@dimen/nav_header_vertical_spacing"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:contentDescription="Icon"
            android:src="@drawable/avatar0" />

        <RelativeLayout
            android:id="@+id/relative_red_dot"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="1dp"
            android:layout_marginEnd="@dimen/point_8"
            android:layout_toRightOf="@+id/imageViewAvatar"
            android:background="@drawable/border10"
            android:backgroundTint="@color/teal_200"
            android:layout_marginRight="@dimen/activity_horizontal_margin" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/relative_avatar"
        android:layout_toRightOf="@id/relative_avatar">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/point_8"
            android:layout_marginBottom="@dimen/point_6"
            android:layout_marginEnd="@dimen/nav_header_vertical_spacing"
            android:layout_marginRight="@dimen/nav_header_vertical_spacing"
            android:text="Title for list of book"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTitle"
            android:layout_marginBottom="@dimen/point_8"
            android:layout_marginEnd="@dimen/nav_header_vertical_spacing"
            android:layout_marginRight="@dimen/nav_header_vertical_spacing"
            android:text="Description for list of book"
            android:textSize="10sp" />
    </RelativeLayout>

</RelativeLayout>